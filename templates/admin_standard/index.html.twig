{% extends 'layoutAdmin.html.twig' %}

{% block title %}Admin Normes{% endblock %}

{% block body %}
    <h1 class="training-title p-4 text-center">Normes</h1>
    <h2 class="training-sub-title text-center mb-4">GÃ©rez les Normes</h2>
    <div class="text-center">
        <button type="submit" class="btn add mb-4"><a href="{{ path('standard_new') }}" class="link-training"><i class="fas fa-plus"></i> Ajouter une norme</a></button>
    </div>
    <div class="row justify-content-center m-0">

        <table class="table col-8 table-striped">
            <thead class="thead">
            <tr>
                <th scope="col" class="table-title-index">Les Normes</th>
                <th scope="col" class="table-title-index text-center">Editer</th>
                <th scope="col" class="table-title-index text-center">Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for standard in standards %}
                <tr>
                    <td><a href="{{ path('standard_show', {'id': standard.id}) }}" class="link-training"> {{ standard.title }}</a></td>
                    <td><a href="{{ path('standard_edit', {'id': standard.id}) }}"><i class="far faro text-center fa-edit icon icon-show mt-3"></i></a></td>
                    <td class="far text-center icon icon-show">{{ include('admin_standard/_delete_form.html.twig') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
