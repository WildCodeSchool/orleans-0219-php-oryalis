{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    <div class="text-center py-5">
        <a href="#" class="btn btn-primary">+ Ajouter un membre</a>
    </div>

    <div class="row card-team">
    {% for employee in employees %}
            <div class="col-md-4 col-lg-4 text-center">
                <img src="{{ asset( employee.picture ) }}" class="img-team"
                     alt="{{ employee.lastname }} {{ employee.firstname }}">
                <div class="card-body">
                    <h2 class="card-title"><span
                                class="text-uppercase">{{ employee.lastname }}</span> {{ employee.firstname }}</h2>
                    <a href="#" class="btn"><i class="far fa-edit"></i></a>
                    <!-- Button trigger modal -->
                    <button type="button" class="btn" data-toggle="modal" data-target="#exampleModal">
                        <i class="far fa-trash-alt"></i>
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Supprimer le profil ?</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>

                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                                    <a href="#" class="btn btn-primary">Supprimer</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    {% endfor %}
    </div>
{% endblock %}
