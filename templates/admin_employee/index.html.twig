{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    <div class="text-center py-5">
        <a href="#" class="btn btn-primary">+ Ajouter un membre</a>
    </div>


    <div class="row card-team">
        {% for employee in employees %}
            <div class="col-md-4 col-lg-4 text-center">
                {% if employee.picture is null %}
                <img src="{{ asset('build/images/placeholder150.png') }}" class="img-team"
                     alt="{{ employee.lastname }} {{ employee.firstname }}">
                {% else %}
                <img src="{{ asset( employee.picture ) }}" class="img-team"
                     alt="{{ employee.lastname }} {{ employee.firstname }}">
                {% endif %}
                <div class="card-body">
                    <h2 class="card-title"><span
                                class="text-uppercase">{{ employee.lastname }}</span> {{ employee.firstname }}</h2>
                    <a href="#" class="btn"><i class="far fa-edit"></i></a>
                    <a href="#" class="btn"><i class="far fa-trash-alt"></i></a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
