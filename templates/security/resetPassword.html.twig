{% extends 'base.html.twig' %}
{% block title %}Reset Password !{% endblock %}
{% block body %}
    <div class="admin container-fluid p-0">
        <div class="row adm justify-content-center m-0">
                {{ form_start(form) }}
                <div class="col-5 justify-content-center login-form">
                        {{ form_row(form.password.first) }}
                        {{ form_row(form.password.second) }}
                        <button class="btn" type="submit">{{ button_label|default('Save') }}</button>
                </div>
                {{ form_end(form) }}
        </div>
    </div>
{% endblock %}