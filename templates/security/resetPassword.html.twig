{% extends 'base.html.twig' %}
{% block title %}Reset Password !{% endblock %}
{% block body %}
    <div class="admin container-fluid p-0">
        <div class="row adm justify-content-center m-0">
                {{ form_start(form) }}
                <div class="col-6 justify-content-center login-form">
                    <div class="col-12"><h1 class="text-center p-1">Reinitialisez votre mot de passe</h1></div>
                        {{ form_row(form.password.first) }}
                </div>
                 <div class="col-6 justify-content-center login-form">
                     {{ form_row(form.password.second) }}
                     <button class="btn btn-lg btn-primary" type="submit">
                         Connectez-vous
                     </button>
                 </div>
                {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
