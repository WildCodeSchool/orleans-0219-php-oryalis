<form method="post" action="{{ path('training_delete', {'id': training.id}) }}" onsubmit="return confirm('êtes-vous sûr de vouloir supprimer cette formation');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ training.id) }}">
    <button class="btn"><i class="far faru fa-trash-alt icon icon-show btn mt-1"></i></button>
</form>
