{% extends 'base.html.twig' %}

{% block title %}Interface administrateur{% endblock %}

{% block body %}
    <h1 class="training-title p-4 text-center">Formations</h1>
    <h2 class="training-sub-title text-center mb-4">Gérez vos formations</h2>
    <div class="text-center">
    <button type="submit" class="btn add mb-4">+ Ajouter une formation</button>
    </div>
    <div class="row justify-content-center">

    <table class="table col-8 table-striped">
            <thead class="thead">
            <tr>
                <th scope="col" class="table-title">Titre de la formation</th>
                <th scope="col" class="table-title text-center">Editer</th>
                <th scope="col" class="table-title text-center">Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for training in trainings %}
                <tr>
                    <td><a href="{{ training.id }}" class="link-training"> {{ training.title }}</a></td>
                    <td><a href="{{ training.id }}"><img src="{{ asset('build/images/edit-filled.png') }}" class="icon mx-auto d-block" alt="Icone d'édition" ></a></td>
                    <td><a href="{{ training.id }}"><img src="{{ asset('build/images/delete-filled.png') }}" class="icon mx-auto d-block" alt="Icone de suppression"></a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
</div>
{% endblock %}
