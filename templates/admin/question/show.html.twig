{% extends 'base.html.twig' %}

{% block title %}{{ question.name }}{% endblock %}

{% block body %}
    <h1>Question</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ question.name }}</td>
            </tr>
            <tr>
                <th>Explanation</th>
                <td>{{ question.explanation }}</td>
            </tr>
            <tr>
                <th>Month</th>
                <td>{{ question.month }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ question.year }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('question_index') }}">back to list</a>

    <a href="{{ path('question_edit', {'id': question.id}) }}">edit</a>

    {{ include('admin/question/_delete_form.html.twig') }}
{% endblock %}
