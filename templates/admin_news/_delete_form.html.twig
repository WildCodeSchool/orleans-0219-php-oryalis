<form class="btn btn-delete" method="post" action="{{ path('news_delete', {'id': new.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ new.id) }}">
    <button class="btn"><i class="far faro fa-trash-alt mt-1"></i></button>
</form>
