{% extends 'layoutVistitor.html.twig' %}
{% block title %}Oryalis - Contact{% endblock %}

{% block body %}
    <div class="row justify-content-center pic-container p-0 m-0">
        <img src="{{ asset('build/images/contact.jpg') }}" class="training-pic" alt="photo de conseil">
        <h1 class="trainings-title">Contactez-nous</h1>
    </div>
    <div class="container-fluid contact p-0 m-0">
        <section class="form row justify-content-center m-0 pb-5">
            <div class="col-12">
                <h1 class="text-center">Formulaire de contact</h1>
            </div>
            <div class="col-12 col-md-10">
                {# read and display just one flash message type #}
                {% for message in app.flashes('success') %}
                    <div class="alert-success">
                        {{ message }}
                    </div>
                {% endfor %}

                <div class="card">
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col-12 col-md-6">
                                {{ form_row(form.firstname, {'label': 'Prénom'}) }}
                                {{ form_errors(form.firstname) }}
                            </div>
                            <div class="col-12 col-md-6">
                                {{ form_row(form.lastname, {'label': 'Nom'}) }}
                                {{ form_errors(form.lastname) }}
                            </div>
                            <div class="col-12 col-md-6">
                                {{ form_row(form.tel, {'label': 'Téléphone'}) }}
                                {{ form_errors(form.tel) }}
                            </div>
                            <div class="col-12 col-md-6">
                                {{ form_row(form.email, {'label': 'E-mail'}) }}
                                {{ form_errors(form.email) }}
                            </div>
                            <div class="col-12 col-md-6">
                                {{ form_row(form.firm, {'label': 'Société'}) }}
                                {{ form_errors(form.firm) }}
                            </div>
                            <div class="col-12 col-md-6">
                                {{ form_row(form.object, {'label': 'Objet'}) }}
                                {{ form_errors(form.object) }}
                            </div>
                            <div class="col-12">
                                {{ form_row(form.message, {'label': 'Message'}) }}

                                <div class="text-center">
                                    <button class="btn btn-blog">{{ button_label|default('Envoyer') }}</button>
                                </div>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </section>
    </div>
    <iframe  width="100%" height="600px" frameborder="0" allowfullscreen src="https://umap.openstreetmap.fr/fr/map/carte-sans-nom_339105?scaleControl=false&miniMap=false&scrollWheelZoom=false&zoomControl=true&allowEdit=false&moreControl=false&searchControl=null&tilelayersControl=null&embedControl=null&datalayersControl=null&onLoadPanel=undefined&captionBar=false"></iframe>
{% endblock %}

