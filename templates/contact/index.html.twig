{% extends 'layoutVistitor.html.twig' %}
{% block title %}Formulaire de contact{% endblock %}

{% block body %}
    <div class="container-fluid contact p-0 m-0">
        <section class="form row justify-content-center">
            <div class="col-12">
                    <h1 class="text-center">Formulaire de contact</h1>
            </div>
            <div class="col-6">

                {# read and display just one flash message type #}
                {% for message in app.flashes('success') %}
                    <div class="alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
                <div class="card">
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col-6">
                                {{ form_row(form.firstname, {'label': 'Prénom'}) }}
                                {{ form_errors(form.firstname) }}
                            </div>
                            <div class="col-6">
                                {{ form_row(form.lastname, {'label': 'Nom'}) }}
                                {{ form_errors(form.lastname) }}
                            </div>
                            <div class="col-6">
                                {{ form_row(form.tel, {'label': 'Téléphone'}) }}
                                {{ form_errors(form.tel) }}
                            </div>
                            <div class="col-6">
                                {{ form_row(form.email, {'label': 'E-mail'}) }}
                                {{ form_errors(form.email) }}
                            </div>
                            <div class="col-6">
                                {{ form_row(form.firm, {'label': 'Société'}) }}
                                {{ form_errors(form.firm) }}
                            </div>
                            <div class="col-6">
                                {{ form_row(form.object, {'label': 'Objet'}) }}
                                {{ form_errors(form.object) }}
                            </div>
                            <div class="col-12">
                                {{ form_row(form.message, {'label': 'Message'}) }}
                                <button class="btn">{{ button_label|default('Envoyer') }}</button>

                            </div>
                        </div>
                        {{ form_end(form)}}
                    </div>
                </div>
            </div>
        </section>
    </div>

{% endblock %}

