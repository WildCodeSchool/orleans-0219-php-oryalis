{% extends 'base.html.twig' %}

{% block title %}Hello Admin{% endblock %}

{% block body %}
<h1> Toutes les formations </h1>

<div class ="container">
    <table class="table table-striped table-bordered ">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Titre de la formation</th>
            <th scope="col">Durée</th>
            <th scope="col">Public concerné</th>
            <th scope="col">Méthodes et moyens pédagogiques</th>
            <th scope="col">Formateur</th>
            <th scope="col">Programme</th>
        </tr>
        </thead>

        <tbody>
        {% for formation in formations %}
            <tr>
                <td>{{ formation.id }}</td>
                <td>{{ formation.titre }}</td>
                <td>{{ formation.duree }}</td>
                <td>{{ formation.public }}</td>
                <td>{{ formation.pedagogie }}</td>
                <td>{{ formation.formateur }}</td>
                <td>{{ formation.programme }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}